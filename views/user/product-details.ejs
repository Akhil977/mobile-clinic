<script>
	$(document).ready(function () {
		toastr.options = {
			"positionClass": "toast-top-right",
			"closeButton": true,
			"progressBar": true,
			"timeOut": "3000"
		};

		function showCartNotification(message, type = 'success') {
			const modal = $('#cartNotificationModal');
			const content = modal.find('.cart-notification-content');
			const messageDiv = modal.find('.cart-notification-message');
			
			// Reset classes and set new ones
			content.removeClass('success error').addClass(type);
			messageDiv.text(message);
			
			// Show the modal
			modal.css('display', 'block');
			
			// Hide after 3 seconds
			setTimeout(() => {
				modal.addClass('slide-out');
				setTimeout(() => {
					modal.removeClass('slide-out').css('display', 'none');
				}, 300);
			}, 3000);
		}

		// Handle Add to Cart button click
		$(document).on('click', '.js-addcart-detail', function(e) {
			e.preventDefault();
			
			// Get the quantity
			const quantity = $('#quantity').val() || 1;
			
			// Extract the base URL from the onclick attribute
			const baseUrl = $(this).attr('onclick').match(/carthandler\?[^'"`]+/)[0];
			
			// Add quantity parameter to URL
			const url = `${baseUrl}&quantity=${quantity}`;
			
			$.ajax({
				url: url,
				method: 'GET',
				dataType: 'json',
				success: function(response) {
					showCartNotification(response.message || 'Product added to cart successfully!', 'success');
					// Reload the page after a delay to update cart count
					setTimeout(() => {
						window.location.reload();
					}, 2000);
				},
				error: function(xhr) {
					const errorMsg = xhr.responseJSON ? xhr.responseJSON.message : 'Failed to add product to cart';
					showCartNotification(errorMsg, 'error');
				}
			});
		});

		// Handle quantity changes
		$('.btn-num-product-down, .btn-num-product-up').on('click', function() {
        setTimeout(() => {
            const newQuantity = parseInt($('#quantity').val());
            const maxQuantity = parseInt($('#quantity').attr('max'));

            if (newQuantity > maxQuantity) {
                $('#quantity').val(maxQuantity);
                toastr.warning(`Only ${maxQuantity} items available in stock.`);
            } else if (newQuantity < 1) {
                $('#quantity').val(1);
            }

            console.log('Quantity updated:', $('#quantity').val());
        }, 100);
    });
	});
</script>

