<header class="header-v4" style="position: fixed; top: 0; left: 0; width: 100%; z-index: 9999; background: white; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
    <div class="wrap-menu-desktop how-shadow1" style="position: relative; top: 0; width: 100%;">
        <nav class="limiter-menu-desktop container">
            <a href="/" class="logo">
                <img src="images/icons/logo-01.png" alt="IMG-LOGO">
            </a>
            <div class="menu-desktop">
                <ul class="main-menu">
                    <li><a href="/">Home</a></li>
                    <li><a href="/blog">Blog</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/contact">Contact</a></li>
                </ul>
            </div>
            <style>
                .js-show-wishlist:hover i {
                    color: red !important;
                }
            </style>
            
            <div class="wrap-icon-header flex-w flex-r-m">
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify="<%= cart ? cart.length : 0 %>">
                    <i class="zmdi zmdi-shopping-cart"></i>
                </div>
            
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-wishlist" onclick="window.location.href='/wishlist'">
                    <i class="zmdi zmdi-favorite-outline"></i>
                </div>
            
                <div class="profile-menu icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
                    <i class="zmdi zmdi-face"></i>
                    <ul class="sub-menu">
                        <% if (!isLoggedIn) { %>
                            <li><a href="/login">Login</a></li>
                        <% } else { %>
                            <li><a href="/profile">My Profile</a></li>
                            <li><a href="/orders">My Orders</a></li>
                            <li><a href="/logout">Log Out</a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</header>

